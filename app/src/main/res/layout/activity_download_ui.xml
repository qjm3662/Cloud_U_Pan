<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qjm3662.cloud_u_pan.UI.DownloadUi">

    <include layout="@layout/bar_item"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/bar_item_height"
        android:layout_centerInParent="true"
        android:id="@+id/rl_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_t"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="请输入提取码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.qjm3662.cloud_u_pan.Widget.EditTextWithDivLine
            android:id="@+id/et_code"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_t"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <com.qjm3662.cloud_u_pan.Widget.EasyButton
            android:id="@+id/btn_sure"
            android:text=" 确定 "
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/et_code"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            style="@style/EasyButtonStyle"
            />
    </RelativeLayout>

</RelativeLayout>
