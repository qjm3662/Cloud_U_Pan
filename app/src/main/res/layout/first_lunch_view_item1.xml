<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/first_lunch_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_marginTop="@dimen/y200"
        android:src="@drawable/cloud"
        android:layout_width="@dimen/x450"
        android:layout_height="@dimen/y576"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_weight="0.04" />

    <ImageView
        android:padding="20dp"
        android:src="@drawable/gengkuaidefenxiang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y495" />

    <ImageView
        android:layout_marginRight="@dimen/x30"
        android:layout_gravity="right"
        android:src="@drawable/youyun"
        android:layout_width="@dimen/x378"
        android:layout_height="@dimen/y138" />

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
