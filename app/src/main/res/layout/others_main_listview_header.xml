<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/y315">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_avatar"
            android:src="@drawable/img_defaultavatar"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_head"
            app:riv_corner_radius="30dip"
            app:riv_border_width="0dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true"
            android:layout_marginLeft="@dimen/y72"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/y195"
            android:layout_width="@dimen/y195"/>

        <TextView
            android:id="@+id/tv_name"
            android:textSize="20sp"
            android:textColor="@color/dark"
            android:text="用户名"
            android:layout_marginLeft="@dimen/y84"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_edit_nickname"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jiahao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <TextView
                android:id="@+id/tv_concern_info"
                android:text="关注"
                android:textColor="@color/dark"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x60"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y99">
        <TextView
            android:background="@color/blue"
            android:layout_width="@dimen/y15"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_his_share"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/dark"
            android:text="他的分享"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>