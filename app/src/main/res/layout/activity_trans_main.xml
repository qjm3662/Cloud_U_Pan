        android:layout_alignEnd="@+id/btn_receive"
        android:layout_alignRight="@+id/btn_receive"
        android:layout_alignTop="@+id/btn_receive"
        android:layout_alignLeft="@+id/btn_receive"
        android:layout_alignStart="@+id/btn_receive"
