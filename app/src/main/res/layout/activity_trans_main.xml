        android:layout_centerInParent="true"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200" />
    <com.qjm3662.cloud_u_pan.Widget.EasyButton
        android:id="@+id/btn_receive"
        style="@style/EasyButtonStyle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_center"
        />

    <ImageView
        android:paddingTop="@dimen/y102"
        android:paddingBottom="@dimen/y102"
        android:paddingLeft="@dimen/x102"
        android:paddingRight="@dimen/x102"
        android:src="@drawable/receive"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
