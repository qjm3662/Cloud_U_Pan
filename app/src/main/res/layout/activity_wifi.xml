<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WI-FI DIRECT TEST" />

    <!--<com.qjm3662.cloud_u_pan.Widget.EasyButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/bt_senddata"-->
        <!--android:layout_toRightOf="@+id/bt_stopdiscover"-->
        <!--android:text="send data"-->
        <!--android:layout_marginTop="64dp"/>-->

    <com.qjm3662.cloud_u_pan.Widget.EasyButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="创建群组"
        android:id="@+id/bt_bgowner" />

    <com.qjm3662.cloud_u_pan.Widget.EasyButton
        android:id="@+id/bt_stopconnect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="断开连接"
        android:layout_alignParentRight="true"
        />


    <com.qjm3662.cloud_u_pan.Widget.EasyButton
        android:id="@+id/bt_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="搜索"
        android:layout_below="@+id/bt_stopdiscover"
        android:layout_centerHorizontal="true"
        />

    <com.qjm3662.cloud_u_pan.Widget.EasyButton
        android:id="@+id/bt_stopdiscover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="停止搜索"
        android:layout_below="@+id/bt_bgowner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.qjm3662.cloud_u_pan.Widget.EasyButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bt_sendpicture"
        android:text="发送图片"
        android:layout_below="@+id/bt_stopconnect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_discover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
