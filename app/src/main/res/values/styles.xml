<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/barBackground</item>
        <item name="colorPrimaryDark">?attr/barBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent"> true </item>
        <item name="barBackground">@color/blue</item>
    </style>


    <style name="EasyButtonStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <!--<item name="android:textSize">18sp</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="sub_btn_duration">1000</item>
        <item name="sub_btn_background">@color/white</item>
        <item name="sub_btn_line_color">@color/blue</item>
        <item name="sub_btn_ripple_color">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


