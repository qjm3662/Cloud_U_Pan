<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/barBackground</item>
        <item name="colorPrimaryDark">?attr/barBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowIsTranslucent"> true </item>-->
        <item name="android:windowBackground">@drawable/first_lunch_background</item>
        <item name="barBackground">@color/blue</item>
    </style>

    <style name="myLunchTheme" parent="AppTheme">
        <item name="barBackground">#5b98d8</item>
        <item name="android:windowBackground">@drawable/first_lunch_background</item>
    </style>


    <string-array name="permissions">
        <item>@string/permission_recode_audio_hint</item>
        <item>@string/permission_get_accounts_hint</item>
        <item>@string/permission_read_phone_hint</item>
        <item>@string/permission_call_phone_hint</item>
        <item>@string/permission_camera_hint</item>
        <item>@string/permission_access_fine_location_hint</item>
        <item>@string/permission_access_coarse_location_hint</item>
        <item>@string/permission_read_external_hint</item>
        <item>@string/permission_white_external_hint</item>
    </string-array>

    <style name="EasyButtonStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <!--<item name="android:textSize">18sp</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="duration">300</item>
        <item name="innerBg">@color/white</item>
        <item name="outerBg">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageCircleButtonStyle">
        <item name="duration">300</item>
        <item name="innerBg">@color/white</item>
        <item name="outerBg">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--<style name="ImageView">-->
        <!--<item name="paddingTop">26dp</item>-->
        <!--<item name="paddingBottom">26dp</item>-->
        <!--<item name="paddingLeft">26dp</item>-->
        <!--<item name="paddingRight">26dp</item>-->

    <!--</style>-->

    <style name="myDialogTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="AVLoadingIndicatorView">
        <item name="minWidth">100dp</item>
        <item name="maxWidth">100dp</item>
        <item name="minHeight">100dp</item>
        <item name="maxHeight">100dp</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <!-- 默认的style -->
    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
