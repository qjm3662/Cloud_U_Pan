<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.qjm3662.cloud_u_pan">

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 网络连接 -->
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.UploadUi" />
        <activity android:name=".UI.DownloadUi" />
        <activity android:name=".UI.DownloadUi2" />
        <activity android:name=".Wifip2pDirect.Activity.WifiDirectMainActivity" />

        <service
            android:name=".Wifip2pDirect.Service.FileTransferService"
            android:enabled="true" />
        <service
            android:name=".Wifip2pDirect.Service.DataTransferService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".UI.LocalFileRecording_Upload" />
        <activity android:name=".UI.LocalFileRecording_Download" />
        <activity android:name=".Wifip2pDirect.WifiDirect" />
        <activity android:name=".Wifip2pDirect.WifiSearching"></activity>
    </application>

</manifest>